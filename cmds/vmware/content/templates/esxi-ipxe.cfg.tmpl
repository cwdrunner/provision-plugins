#!ipxe

echo ========================================================
echo         UUID: ${uuid}
echo Manufacturer: ${manufacturer}
echo Product name: ${product}
echo     Hostname: ${hostname}
echo
echo  MAC address: ${net0/mac}
echo   IP address: ${net0/ip}
echo IPv6 address: ${net0.ndp.0/ip6:ipv6}
echo
echo      Netmask: ${net0/netmask}
echo      Gateway: ${gateway}
echo          DNS: ${dns}
echo     IPv6 DNS: ${dns6}
echo       Domain: ${domain}
echo ========================================================

iseq ${platform} efi && goto efi || goto noefi
:efi
echo ">> Chain EFI bootx64.efi"
chain {{ .Env.PathFor "http" "efi/boot/bootx64.efi" }} {{ .BootParams }}
:noefi
echo ">> Chain to esxi.0 and set non-EFI boot option '210:string'"
set 210:string /{{.Env.PathFor "tftp" ""}}/
chain esxi.0
